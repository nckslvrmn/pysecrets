<!DOCTYPE html>
<html>

<head>
  <title>Secrets</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css" integrity="sha512-Ez0cGzNzHR1tYAv56860NLspgUGuQw16GiOOp/I2LuTmpSK9xDXlgJz3XN4cnpXWDmkNBKXR/VDMTCnAaEooxA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    html,
    body {
      height: 100%;
      background: #bbb;
    }

    body {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .card-signin {
      border: 0;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
      padding: 2rem;
    }

    #results {
      opacity: 0;
      transition: opacity .5s;
    }

    #results.active {
      opacity: 1;
    }
  </style>
</head>

<body class="text-left">
  <div class="card card-signin">
    <h1 class="display-4 text-truncate">Ephemeral Secrets</h1>
    <h6 class="text-truncate">&nbsp;Enter a password, secret message, or private link below.</h6>
    <h6 class="text-truncate">&nbsp;A secret link only works for the number of times specified and then disappears forever.</h6>
    <br />
    <form onsubmit="postFile()" id="form" class="form-signin">
      <div class="mb-3 form-group">
        <label for="file" class="form-label">File to encrypt</label>
        <input class="form-control" id="file" ref="file" type="file">
      </div>
      <br />
      <div class="form-group d-grid gap-2">
        <input type="submit" class="btn btn-primary" value="Create Secret Link">
      </div>
    </form>
    <div id="results"></div>
  </div>

  <script>
    function postFile() {
      event.preventDefault();
      var file = document.getElementById("file");
      var results = document.getElementById("results");
      results.classList.remove('active');
      var fileSize = file.files[0].size / 1024 / 1024;
      if (fileSize > 10) {
        alert('File size exceeds 10 MB');
        file.value = '';
      }
      var url = new URL('https://{{ base_domain }}/encrypt');
      var params = {
        file_name: file.files[0].name
      };
      url.search = new URLSearchParams(params).toString();
      fetch(url, {
          method: 'post',
          body: file.files[0]
        })
        .then(function(resp) {
          if(resp.ok) {
            return resp.json();
          } else {
            var respHTML = `<br /><div class="alert alert-danger" role="alert">There was an error storing secret</div>`;
            results.innerHTML = respHTML;
            results.classList.add('active');
          }
        })
        .then(function(data) {
          var secret_link = `${window.location.origin}/secret/${data.secret_id}`;
          var respHTML = `<br /><pre id="response" class="mw-50"><a href="${secret_link}" target="_blank">${secret_link}</a><br />passphrase: ${data.passphrase}</pre>`;
          results.innerHTML = respHTML;
          results.classList.add('active');
        })
        .catch((error) => {
          var respHTML = `<br /><div class="alert alert-danger" role="alert">There was an error storing the secret file</div>`;
          results.innerHTML = respHTML;
          results.classList.add('active');
        });
    }
  </script>
</body>

</html>
